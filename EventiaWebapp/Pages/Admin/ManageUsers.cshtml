@page
@using Microsoft.AspNetCore.Identity
@model EventiaWebapp.Pages.Admin.ManageUsersModel
@{
}

<h1 class="text-center" style="padding: 20px 0 40px 0">MANAGE USERS</h1>


<h3 class="display-6 text-start" style="padding: 20px 0 10px 0">USER LIST</h3>
<table class="table table-dark table-hover">
    <thead>
    <tr>
        <th scope="col">#</th>
        <th scope="col">Username</th> @*TODO sort onClick*@
        <th scope="col">Email</th>
        <th scope="col">Roles</th>
        
    </tr>
    </thead>
    <tbody>
    @for (int i = 0; i < Model.UserList.Count; i++)
    {
        <tr>
            <th scope="row">@(i+1)</th>
            <td>@Model.UserList[i].Username</td>
            <td>@Model.UserList[i].Email</td>
            @foreach (var role in @Model.UserList[i].Role)
            {
                <td>@role</td>
            }
        </tr>
    }

    </tbody>
</table>




@if (@Model.ApplicantList.Count != 0){
    <h3 class="display-6 text-start" style="padding: 20px 0 10px 0">PENDING ORGANIZER APPLICANTS</h3>

    <table class="table table-dark table-hover">
        <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Username</th> @*TODO sort onClick*@
            <th scope="col">Email</th>
            <th scope="col">Accept</th>
            
        </tr>
        </thead>
        <tbody>
        @for (int i = 0; i < Model.ApplicantList.Count; i++)
        {
            <tr>
                <th scope="row">@(i+1)</th>
                <td>@Model.ApplicantList[i].UserName</td>
                <td>@Model.ApplicantList[i].Email</td>
                <form method="post">
                    <input value="@Model.ApplicantList[i].Id" name="userId" type="hidden" ></input>
                    <td><button class="btn btn-sm btn-light">Accept</button></td>
                </form>
            </tr>
        }

        </tbody>
    </table>
}