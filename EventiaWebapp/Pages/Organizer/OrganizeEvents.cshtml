@page
@model EventiaWebapp.Pages.Organizer.OrganizeEventsModel
@{
}

<h1 style="padding: 20px 0 40px 0">@Model.EventiaUser.UserName.ToUpper()'S EVENTS</h1>

<table class="table table-dark table-hover">
    <thead>
    <tr>
        <th scope="col">#</th>
        <th scope="col">Event</th>
        <th scope="col">Where</th>
        <th scope="col">When</th>
        <th scope="col">Time</th>
    </tr>
    </thead>
    <tbody>
    @for (int i = 0; i < Model.EventList.Count; i++)
    {
        <tr>
            <th scope="row">@(i+1)</th>
            <td>@Model.EventList[i].Titel</td>
            <td>@Model.EventList[i].Place</td>
            <td>@Model.EventList[i].Date.ToShortDateString()</td>
            <td>@Model.EventList[i].Date.ToShortTimeString()</td>
        </tr>
    }

    </tbody>
</table>
