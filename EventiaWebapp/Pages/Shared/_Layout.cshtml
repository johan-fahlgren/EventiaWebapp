<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>BirthdaysDotCom</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
</head>

<body>
<header>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link active" aria-current="page" asp-page="/Index">Home</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-page="/UpComingEvents">Events</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-page="/MyEvents">My Events</a>
                </li>
            </ul>
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link "
                       asp-page="/Admin">Admin</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link " asp-page="/LogIn">Login</a>
                </li>
            </ul>
            
        </div>
    </nav>
</header>

<main role="main">
    @RenderBody()

</main>

<footer>
    <p> Eventia &copy; </p>
</footer>
@RenderSection("Overview_style", required: false)
@RenderSection("UpAndComing_Style", required: false)
</body>

</html>




<style>

    html {
        background-color: #ffff;
        margin: 0;
        padding: 0;
       
    }

    body {
        font-family: Cascadia Mono;
        background-color: #a2b9bc;
        height: 100vh;
        width: 800px;
        margin:auto;
    }

    main {
        padding: 20px 40px;
    }

    p {
        font-size: 1.2rem;
    }

    li {
        font-size: 1.2rem;
    }

    .navbar {
        margin: 0px;
        padding: 20px;
        background-color: bisque;
        display: flex;
        gap: 30px;
    }

    .navbar > li {
        list-style: none;
        font-size: 1.4rem;
    }

    .todays_date {
        color: darkslategrey;
        font-weight: bold;
        font-size: 1.6rem;
        background-color: bisque;
        padding: 10px;
    }

    footer {
        position: fixed;
        bottom: 0px;
        width: 800px;
        padding: 10px 0px;
        background-color: #212529;
    }

    footer > p {
        color: white;
        text-align: center;
        margin: 0 40px;
        font-size: 1.2rem;
    }
</style>